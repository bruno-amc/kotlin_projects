<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="16dp">

        <TextView
            android:text="Nome do Dispositivo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editNomeDispositivo"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: AparelhoA"
            android:inputType="textPersonName" />

        <TextView
            android:text="Intervalo de Envio (segundos)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editIntervaloEnvio"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 5"
            android:inputType="number" />

        <TextView
            android:text="Distância Mínima para Alerta (metros)"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editDistanciaAlerta"
            android:background="@drawable/edittext_background"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Ex: 20"
            android:inputType="number" />

        <CheckBox
            android:id="@+id/checkboxAlertaSonoro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emitir alerta sonoro se estiver perto"
            android:layout_marginTop="16dp" />

        <Button
            android:id="@+id/btnAtivarTransmissao"
            android:gravity="center"
            android:drawablePadding="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ATIVAR TRANSMISSÃO"
            android:textAllCaps="false"
            android:textSize="18sp"
            android:drawableStart="@drawable/ic_play_arrow"
            android:padding="12dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@color/verde_ativo"
            android:textColor="@android:color/white"
            />


        <TextView
            android:id="@+id/textDistanciaAtual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Distância atual: -- m"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="32dp" />

        <fragment
            android:id="@+id/mapFragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="16dp" />
    </LinearLayout>
</ScrollView>
