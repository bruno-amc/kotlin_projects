<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/main"
    android:background="@drawable/retrogaragebackground">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_checklist_configurar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:backgroundTint="#00000000"
                android:fontFamily="@font/crimsontextregular"
                android:shadowColor="#D4A373"
                android:text="Configurar Checklists"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"
                />

            <Button
                android:id="@+id/btn_preencher_checklist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:backgroundTintMode="add"
                android:fontFamily="@font/crimsontextregular"
                android:text="Preencher Checklist"
                android:textColorLink="#FFC107"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn_analise_5w2h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Análise 5W2H"
                android:background="@drawable/button_background"
                android:fontFamily="@font/crimsontextregular"
                android:backgroundTint="@null"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn_analise_ishikawa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diagrama de Ishikawa"
                android:background="@drawable/button_background"
                android:fontFamily="@font/crimsontextregular"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/btn_relatorio_fotografico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relatório Fotográfico"
                android:background="@drawable/button_background"
                android:fontFamily="@font/crimsontextregular"
                android:layout_marginBottom="16dp"
                android:textSize="30sp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
