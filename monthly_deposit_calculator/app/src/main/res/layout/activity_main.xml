<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
    android:id="@+id/lottieAnimationView"
    android:layout_width="180dp"
    android:layout_height="180dp"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    app:lottie_fileName="animation.lottie" />

    <TextView
    android:id="@+id/textView9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Preencha três campos e o campo vazio será calculado."
    android:textColor="@color/textColor"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_marginTop="10dp"/>

    <TextView
    android:id="@+id/textView5"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Número de meses"
    android:textColor="@color/textColor"
    android:layout_marginTop="15dp"
    android:textAlignment="viewStart" />

    <EditText
    android:id="@+id/editTextNumeroMeses"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Número de Meses (n)"
    android:textColor="@color/textColor"
    android:inputType="number" />

    <TextView
    android:id="@+id/textView6"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Taxa de Júros Mensal (% ao mês)"
    android:textColor="@color/textColor"
    android:layout_marginTop="15dp"
    android:textAlignment="viewStart" />

    <EditText
    android:id="@+id/editTextJTaxaDeJuros"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Taxa de Juros Mensal (j)"
    android:textColor="@color/textColor"
    android:inputType="numberDecimal" />

    <TextView
    android:id="@+id/textView7"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Valor do Depósito Mensal"
    android:textColor="@color/textColor"
    android:layout_marginTop="15dp"
    android:textAlignment="viewStart" />

    <EditText
    android:id="@+id/editTextDepositosMensais"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Valor do Depósito Regular (p)"
    android:textColor="@color/textColor"
    android:inputType="numberDecimal" />

    <TextView
    android:id="@+id/textView8"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Valor Final"
    android:textColor="@color/textColor"
    android:layout_marginTop="15dp"
    android:textAlignment="viewStart" />

    <EditText
    android:id="@+id/editTextSn"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:hint="Valor Final (Sn)"
    android:textColor="@color/textColor"
    android:inputType="numberDecimal" />

    <Button
    android:id="@+id/buttonCalcular"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Calcular"
    android:textColor="@color/buttonTextColor"
    android:backgroundTint="@color/buttonColor"
    android:layout_marginTop="20dp" />

    <Space
    android:layout_width="match_parent"
    android:layout_height="35dp" />

    <Button
    android:id="@+id/buttonLimpar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Limpar Campos"
    android:textColor="@color/buttonTextColor"
    android:backgroundTint="@color/buttonColor"
    android:layout_marginTop="10dp" />

    <Space
    android:layout_width="match_parent"
    android:layout_height="35dp" />

    <Button
    android:id="@+id/buttonEquacao"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Equação utilizada"
    android:textColor="@color/buttonTextColor"
    android:backgroundTint="@color/buttonColor"
    android:layout_marginTop="10dp" />


    </LinearLayout>
</ScrollView>