<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/background"
    android:gravity="center">

    <com.airbnb.lottie.LottieAnimationView
    android:id="@+id/lottieAnimationView"
    android:layout_width="180dp"
    android:layout_height="180dp"
    app:lottie_autoPlay="true"
    app:lottie_loop="true"
    app:lottie_fileName="animation.lottie" />

    <TextView
    android:id="@+id/textView9"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Escolha a maneira de cálculo nas opções abaixo"
    android:textColor="@color/textColor"
    android:textStyle="bold"
    android:textAlignment="center"
    android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/buttonMontlyDeposit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calcular sem depósito inicial"
        android:textColor="@color/buttonTextColor"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginTop="20dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="35dp" />

    <Button
        android:id="@+id/buttonDepositWithInitialAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calcular com depósito inicial"
        android:textColor="@color/buttonTextColor"
        android:backgroundTint="@color/buttonColor"
        android:layout_marginTop="10dp" />

    </LinearLayout>
</ScrollView>